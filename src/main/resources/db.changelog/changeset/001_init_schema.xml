<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="add-uuid-ossp-extension" author="ahmed">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>
    <changeSet id="create_admin_table" author="ahmed">
        <createTable tableName="admin">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="admin"/>
        </rollback>
    </changeSet>

    <changeSet id="default_admin_id" author="ahmed">
        <sql>
            ALTER TABLE admin ALTER COLUMN id SET DEFAULT uuid_generate_v4();
        </sql>
    </changeSet>



    <changeSet id="create_user_table" author="ahmed">
        <createTable tableName="user">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_user_email"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="user"/>
        </rollback>
    </changeSet>

    <changeSet id="default_user_id" author="ahmed">
        <sql>
            ALTER TABLE "user" ALTER COLUMN id SET DEFAULT uuid_generate_v4();
        </sql>
    </changeSet>

    <changeSet id="create_enum_types" author="ahmed">
        <sql>
            CREATE TYPE status_enum AS ENUM('scheduled', 'completed', 'cancelled');
        </sql>
    </changeSet>

    <changeSet id="create_appointment_table" author="ahmed">
        <createTable tableName="appointment">
            <column name="id" type="UUID">
                <constraints  primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints foreignKeyName="fk_user" references="user(id)"  nullable="false"/>
            </column>
            <column name="appointment_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="service" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>

<!--        you can add sql and addDefaultValue in same changeset-->

        <sql>
            ALTER TABLE "appointment" ALTER COLUMN id SET DEFAULT uuid_generate_v4();
        </sql>

        <addDefaultValue tableName="appointment" columnName="status" defaultValue="scheduled"/>

        <rollback>
            <dropTable tableName="appointment"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
